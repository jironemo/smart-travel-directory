<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartTravelDirectory">
        <activity
            android:name="com.smarttravel.myanmar.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.SmartTravelDirectory">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.smarttravel.myanmar.DestinationDetailActivity"
            android:exported="true"
            android:theme="@style/Theme.SmartTravelDirectory">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.smarttravel.myanmar.ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.SmartTravelDirectory" />
        <activity android:name="com.smarttravel.myanmar.SearchActivity"
            android:exported="false" />
        <activity android:name="com.smarttravel.myanmar.TripAdviceActivity"
            android:exported="false" />
        <activity android:name="com.smarttravel.myanmar.FavouritesActivity"
            android:exported="false" />
    </application>

</manifest>