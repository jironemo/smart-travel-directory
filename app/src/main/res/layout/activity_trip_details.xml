<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar/Header -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Trip Details"
        app:titleTextColor="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Trip Main Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:id="@+id/tripDetailsLocationText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary" />
                    <TextView
                        android:id="@+id/tripDetailsCostText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Estimated Cost: ..."
                        android:textSize="16sp"
                        android:textStyle="italic"
                        android:textColor="@android:color/holo_green_dark"
                        android:layout_marginTop="8dp" />
                    <TextView
                        android:id="@+id/tripDetailsFoodText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Food: ..."
                        android:textSize="16sp"
                        android:layout_marginTop="8dp" />
                    <TextView
                        android:id="@+id/tripDetailsAccommodationText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Accommodation: ..."
                        android:textSize="16sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Destinations Section -->
            <TextView
                android:id="@+id/tripDetailsDestinationsHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Destinations"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tripDetailsDestinationsRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingBottom="16dp" />

            <TextView
                android:id="@+id/tripDetailsBestBitesHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Local Best Bites"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tripDetailsBestBitesRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingBottom="16dp" />
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:menu="@menu/bottom_nav_menu" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
