<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/profileContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_profile"
                android:contentDescription="Profile Picture"
                android:background="@drawable/oval_profile_bg"
                android:scaleType="centerCrop" />
            <ImageButton
                android:id="@+id/btnEditProfileImage"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="bottom|end"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_edit"
                android:contentDescription="Edit Profile Image"
                android:padding="4dp"
                android:tint="@color/primary" />
        </FrameLayout>

        <TextView
            android:id="@+id/profileNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guest User"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/profileEmailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="guest@example.com"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/profileCreatedAtTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Member since Aug 2025"
            android:textSize="13sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/profileReviewsCountTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reviews: 0"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/profileFavouritesCountTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Favourites: 0"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnToggleAdminView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go To Admin View"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:elevation="2dp"
            app:cornerRadius="16dp" />
        <!-- Button will be shown for admin users only -->
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
